<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/layout"
    android:background="@mipmap/madeiracumaru"
    >


    <TextView
        android:id="@+id/textView"
        android:layout_width="fill_parent"
        android:layout_height="40dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="#242424"
        android:padding="5dp"
        android:text="@string/piano"
        android:textAlignment="center"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="#ffffff"
        android:textSize="25sp" />

    <Button
        android:layout_width="fill_parent"
        android:layout_height="60dp"
        android:id="@+id/C_btn"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/textView"
        android:layout_marginTop="30dp" />

    <Button
        android:layout_width="fill_parent"
        android:layout_height="60dp"
        android:id="@+id/D_btn"
        android:layout_below="@+id/C_btn"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="-10dp"
        />

    <Button
        android:layout_width="200dp"
        android:layout_height="35dp"
        android:background="#000000"
        android:id="@+id/Csus_btn"
        android:layout_below="@+id/C_btn"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="-30dp"
        />

    <Button
        android:layout_width="fill_parent"
        android:layout_height="60dp"
        android:id="@+id/E_btn"
        android:layout_below="@+id/D_btn"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="-10dp"
        />


    <Button
        android:layout_width="fill_parent"
        android:layout_height="60dp"
        android:id="@+id/F_btn"
        android:layout_below="@+id/E_btn"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="-10dp"
        />


    <Button
        android:layout_width="200dp"
        android:layout_height="35dp"
        android:background="#000000"
        android:id="@+id/Dsus_btn"
        android:layout_below="@+id/E_btn"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="-70dp"
        />

    <Button
        android:layout_width="fill_parent"
        android:layout_height="60dp"
        android:id="@+id/G_btn"
        android:layout_below="@+id/F_btn"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="-10dp"
        />

    <Button
        android:layout_width="fill_parent"
        android:layout_height="60dp"
        android:id="@+id/A_btn"
        android:layout_below="@+id/G_btn"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="-10dp"
        />

    <Button
        android:layout_width="200dp"
        android:layout_height="35dp"
        android:background="#000000"
        android:id="@+id/Fsus_btn"
        android:layout_below="@+id/G_btn"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="-75dp"
        />

    <Button
        android:layout_width="fill_parent"
        android:layout_height="60dp"
        android:id="@+id/B_btn"
        android:layout_below="@+id/A_btn"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="-10dp"
        />

    <Button
        android:layout_width="200dp"
        android:layout_height="35dp"
        android:background="#000000"
        android:id="@+id/Gsus_btn"
        android:layout_below="@+id/A_btn"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="-70dp"
        />

    <Button
        android:layout_width="fill_parent"
        android:layout_height="60dp"
        android:id="@+id/Cp_btn"
        android:layout_below="@+id/B_btn"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="-10dp"
        />

    <Button
        android:layout_width="200dp"
        android:layout_height="35dp"
        android:background="#000000"
        android:id="@+id/Asus_btn"
        android:layout_below="@+id/B_btn"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="-65dp"
        />

    <Button
        android:layout_width="200dp"
        android:layout_height="15dp"
        android:background="#000000"
        android:id="@+id/Dsusp_btn"
        android:layout_below="@+id/Cp_btn"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="-20dp"
        />

</RelativeLayout>